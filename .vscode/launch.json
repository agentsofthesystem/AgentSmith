    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Server",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "server.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--port=3000"
            ],
            "jinja": true,
            "justMyCode": false
        },
        {
            "name": "Python: Gui",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/gui.py",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Any Test Script",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/test_auth.py",
            "cwd": "${workspaceFolder}/scripts",
            "console": "integratedTerminal",
            "justMyCode": true
        },
    ]
}