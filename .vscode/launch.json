    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "main.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--port=3000"
            ],
            "jinja": true,
            "justMyCode": false
        },
        {
            "name": "Script: Run Tester",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/test_script.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/scripts"
        },
    ]
}